<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meat_container"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:layout_margin="@dimen/layoutMargin"
    android:foreground="?android:attr/selectableItemBackground">


    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_gravity="right|center_vertical">

        <TextView
            android:id="@+id/hot_deal_header_title"
            style="@style/textSubtitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_weight="10"
            android:padding="4dp"
            android:singleLine="true"
            android:text="@string/hot_deals"
            android:textColor="@color/colorTextPrimaryLight" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_weight="1"
            android:src="@mipmap/ic_keyboard_arrow_right_white_24dp" />

        <ImageView
            android:layout_gravity="center"
            android:contentDescription="Android Robot"
            android:id="@+id/menu_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/wimf_logo_greenlight"
            android:scaleType="centerInside"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="60%" />

    </android.support.percent.PercentRelativeLayout>


</FrameLayout>
