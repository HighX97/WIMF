<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/meat_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/menu_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:background="@drawable/items1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:background="@color/windowBackgroud"
        android:layout_toRightOf="@+id/menu_image"
        android:layout_toEndOf="@+id/menu_image">

        <TextView
            android:id="@+id/menu_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_gravity="center_vertical|start"
            android:textSize="24sp"
            tools:text="Title"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorTextPrimaryLight" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="end|center"
            android:background="@mipmap/ic_keyboard_arrow_right_white_24dp"/>

    </LinearLayout>



</RelativeLayout>
