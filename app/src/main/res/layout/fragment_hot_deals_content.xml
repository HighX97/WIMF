<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame"
    android:scrollbars="none"
    android:background="@color/windowBackgroudLight">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hot_deaL_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/items3"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_bottom"
            android:background="@color/colorAccent"
            android:layout_below="@id/hot_deaL_image"

            android:gravity="right">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hot_deal_order"
                android:padding="10dp"
                android:src="@mipmap/ic_shopping_cart_white_24dp"
                android:background="@color/selector_icons_hot"
                android:contentDescription="Favorites"
                android:clickable="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hot_deal_favorite"
                android:padding="10dp"
                android:src="@null"
                android:background="@color/selector_icons_hot"
                android:contentDescription="Favorites"
                android:clickable="true"
                android:focusable="true" />



        </LinearLayout>

        <TextView
            android:id="@+id/hot_deal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_bottom"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="16dp"
            android:textSize="30sp"
            tools:text="HOT DEALS 1"/>

        <TextView
            android:id="@+id/hot_deal_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hot_deal_title"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:text="DESCRIPTION"
            android:textColor="@color/colorTextPrimary"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/hot_deal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hot_deal_description"
            android:text="000"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextPrimaryLight"
            android:padding="4dp"
            android:textSize="28sp"/>







    </RelativeLayout>

</ScrollView>
